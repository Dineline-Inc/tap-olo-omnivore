{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Discounts Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "location_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "dollar",
        "percent"
      ]
    },
    "value": {
      "type": "integer"
    },
    "available": {
      "type": "boolean"
    },
    "applies_to_item": {
       "type": "boolean"
    },
    "applies_to_ticket": {
       "type": "boolean"
    },
    "max_amount": {
      "type": [
        "integer",
        "null"
      ]
    },
    "max_percent": {
      "type": [
        "integer",
        "null"
      ]
    },
    "min_amount": {
      "type": [
        "integer",
        "null"
      ]
    },
    "min_percent": {
      "type": [
        "integer",
        "null"
      ]
    },
    "min_ticket_total": {
      "type": [
        "integer",
        "null"
      ]
    },
    "open": {
      "type": "boolean"
    },
    "pos_id": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "id"
  ]
}
